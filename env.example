# ========================================
# MCP Spotify Player - Configuración
# ========================================

# Spotify API Configuration
# Obtén estas credenciales en: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8000/auth/callback

# Server Configuration
PORT=8000
HOST=127.0.0.1
DEBUG=True

# MCP Configuration
MCP_SERVER_NAME=spotify-player
MCP_SERVER_VERSION=1.0.0

# ========================================
# Instrucciones:
# 1. Copia este archivo a .env
# 2. Reemplaza las credenciales con las tuyas
# 3. Asegúrate de que la URL de redirección coincida
#    con la configurada en tu app de Spotify
# ======================================== 